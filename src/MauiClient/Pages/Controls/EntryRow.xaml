<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiClient.Pages.Controls.EntryRow"
             xmlns:models="clr-namespace:Shared.Entities;assembly=Shared"
             xmlns:controls="clr-namespace:MauiClient.Pages.Controls;assembly=MauiClient"
             x:DataType="models:WalletEntry"
      VerticalOptions="Center"
      Padding="10"
      ColumnSpacing="20">
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition  Width="100"/>
        <ColumnDefinition Width="100"/>
        <ColumnDefinition Width="200"/>
        <ColumnDefinition Width="200"/>
    </Grid.ColumnDefinitions>

    <Label Grid.Column="0"
           Style="{StaticResource Title2}"
           Text="{Binding Amount}"
           VerticalTextAlignment="Center"/>
    <Label Grid.Column="1"
           Text="{Binding Date}"
           VerticalTextAlignment="Center"/>
    <controls:TagView
        Grid.Column="2"
        Name="{Binding Category.Name}" HexColor="{Binding Category.ColorCode}">
    </controls:TagView>
    <controls:TagView
        Grid.Column="3"
        Name="{Binding Label.Name}" HexColor="{Binding Label.ColorCode}">
    </controls:TagView>
</Grid>
